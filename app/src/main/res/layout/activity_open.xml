<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/title_bar_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="西始工业超市在线智能仓库"
            android:textColor="@color/colorWhite"
            android:textSize="38sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="198dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/shape_corner_white_bg"
        android:elevation="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/ll_actionbar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_take_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/angle_left"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="打开柜子"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_bottom"
            android:layout_below="@id/ll_actionbar"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_zhu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_take"
                    android:text="打开主柜"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_take"
                    android:text="打开A柜"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_one"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_take"
                    android:text="打开B柜"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_take"
                    android:text="打开C柜"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>