<?xml version="1.0" encoding="utf-8"?>
<com.xdz.seekwork.adpter.view.StuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_huodao"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_manager_blue_bg"
        android:gravity="left|center_vertical"
        android:minHeight="68dp"
        android:paddingLeft="10dp"
        android:text="11"
        android:textColor="@color/title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_diff_num"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_manager_bg"
        android:gravity="left|center_vertical"
        android:minHeight="68dp"
        android:paddingLeft="10dp"
        android:text="0"
        android:textColor="@color/sub_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_bu_num"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_diff_num"
        android:background="@drawable/shape_manager_bg"
        android:gravity="left|center_vertical"
        android:minHeight="68dp"
        android:paddingLeft="10dp"
        android:text="15"
        android:textColor="@color/sub_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_bu_num"
        android:layout_toRightOf="@id/tv_huodao"
        android:background="@drawable/shape_manager_bg"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:minHeight="68dp"
        android:paddingLeft="10dp"
        android:paddingRight="4dp"
        android:text="110110眼镜"
        android:textColor="@color/title"
        android:textSize="20sp" />


</com.xdz.seekwork.adpter.view.StuView>