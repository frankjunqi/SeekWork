<?xml version="1.0" encoding="utf-8"?>
<com.xdz.seekwork.adpter.view.StuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/main_choice_bg">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text="张小兵"
        android:textColor="@color/title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_name"
        android:gravity="left"
        android:text="男"
        android:textColor="@color/title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text="星塘小学(027491)"
        android:textColor="@color/sub_title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_school"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="2年级3班(27490203)"
        android:textColor="@color/sub_title"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_handle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="待完善"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</com.xdz.seekwork.adpter.view.StuView>