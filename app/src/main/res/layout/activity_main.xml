<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/title_bar_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:text="西始工业超市在线智能仓库"
            android:textColor="@color/colorWhite"
            android:textSize="36sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/shape_corner_white_bg"
        android:elevation="16dp"
        android:padding="30dp">

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/instruction" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_info"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="设备编号：Test002"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="紧急联系人：孔建华 13003030330"
                android:textSize="21sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_bottom"
            android:layout_below="@id/iv_info"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_take"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/iv_info"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_take"
                android:drawablePadding="-40dp"
                android:paddingTop="50dp"
                android:text="取货"
                android:textColor="@android:color/white"
                android:textSize="44sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/btn_take"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_borrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_borrow"
                    android:drawablePadding="-40dp"
                    android:paddingTop="50dp"
                    android:text="借货"
                    android:textColor="@android:color/white"
                    android:textSize="44sp" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_title_bar"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_back"
                    android:drawablePadding="-40dp"
                    android:paddingTop="50dp"
                    android:text="还货"
                    android:textColor="@android:color/white"
                    android:textSize="44sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>