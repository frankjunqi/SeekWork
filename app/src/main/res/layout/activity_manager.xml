<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/title_bar_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="西始工业超市在线智能仓库"
            android:textColor="@color/colorWhite"
            android:textSize="38sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="198dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/shape_corner_white_bg"
        android:elevation="16dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_add_pro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_title_bar"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_borrow"
                android:text="货道补货"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_open_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_title_bar"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_back"
                android:text="打开所有格子柜"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_one"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_exit_sys"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_title_bar"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_exit"
                android:text="退出系统"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_exit_manager"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_title_bar"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_take"
                android:text="退出管理"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>